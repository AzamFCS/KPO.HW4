{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "websocket-negotiate-route": {
        "ClusterId": "orders-websocket-cluster",
        "Match": {
          "Path": "/orderStatusHub/negotiate"
        },
        "Transforms": []
      },
      "websocket-connect-route": {
        "ClusterId": "orders-websocket-cluster",
        "Match": {
          "Path": "/orderStatusHub"
        },
        "Transforms": []
      }
    },
    "Clusters": {
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://payments-service:80"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://orders-service-1:80"
          },
          "destination2": {
            "Address": "http://orders-service-2:80"
          },
          "destination3": {
            "Address": "http://orders-service-3:80"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      },
      "orders-websocket-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://orders-service-1:80"
          }
        }
      }
    }
  }
}

